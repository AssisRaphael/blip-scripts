{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": ["airbnb-base", "prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "indent": ["error", 4, { "SwitchCase": 2 }],
        "no-console": "off",
        "camelcase": "off",
        "class-methods-use-this": "off",
        "radix": "off",
        "consistent-return": "off",
        "no-underscore-dangle": "off",
        "no-var": ["error"],
        "semi": ["error", "always"],
        "comma-dangle": ["error", "never"],
        "curly": ["error", "all"]
    }
}
